<div class="main users-index">
  <div class="group-home-container">
    <p class="group-menus-title">グループの機能一覧</p>
    <ul class="group-menus">
        <!--<li>
          <%#<%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
        </li>
        <li>
          <%#<%= link_to("投稿一覧", "/posts/index") %>
        </li>-->
        <li>
          <%= link_to("グループ参加", "/groups/join", class: "group-home-menus") %>
        </li>
        <li>
          <%= link_to("新規グループ作成", "/groups/new", class: "group-home-menus") %>
        </li>
        <li>
          <%= link_to("ログアウト", "/logout", {method: :post, class: "group-home-menus"}) %>
        </li>
    </ul>
  </div>
  <div class="group-links">
    <p class="joined-group">参加グループ一覧</p>
    <% if @connections.present? %>
      <% groups = [] %>
      <% @connections.each do |connection| %>
        <% group=Group.find_by(id: connection.group_id) %>
        <% groups.push(group) %>
      <% end %>
    <% groups.each do |group| %>
      <div class="users-index-item">
        <!--写真は省略-->
        <table class="post-list">
          <tr>
            <td class="group-image"><%= link_to("/groups/#{group.id}") do %>
              <img class="our-image" src="<%= "/group_images/#{group.image_name}" %>"></td>
              <% end %>
            <td class="group-list"><%= link_to(group.name, "/groups/#{group.id}") %></td>
          </tr>
      </div>
    <% end %>
    <% end %>
  </div>
</div>
