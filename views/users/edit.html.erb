<div class="main users-edit">
  <div class="container">
    <div class="edit-form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="edit-form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
          <p class="form-description">ユーザー名</p>
          <input class="input-field" name="name" value="<%= @user.name %>">
          <p class="form-description">画像</p>
          <input class="input-field" name="image" type="file">
          <p class="form-description">メールアドレス</p>
          <input class="input-field" name="email" value="<%= @user.email %>">
          <input class="input-submit" type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>
