<div class="main users-new">
  <div class="form-container">
    <div class="form users-form">
      <img class="form-under" src="assets/signup_image.jpeg">
      <div class="signup-form-body signup-user">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/users/create") do %>
          <p class="form-description">ユーザー名</p>
          <input class="input-field" name="name" value="<%= @user.name %>">
          <p class="form-description">メールアドレス</p>
          <input class="input-field" name="email" value="<%= @user.email %>">
          <p class="form-description">パスワード</p>
          <input class="input-field" type="password" name="password" value="<%= @user.password %>">
          <input class="input-new-submit" type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>
